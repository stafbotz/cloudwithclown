<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">DB Local JSON</a>
</nav>
<div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
	      <tr>
		 <th>File <i class="fa fa-fw fa-trash"></i></th>
		 <th>Edit</th>
                 <th>Delete</th>		
	      </tr>
	 </thead>
	 <tbody>
               {{#each result}}
	       <tr>
		  <td>
                     {{this}}
                  </td>
                  <td>
                     <p data-placement="top" data-toggle="tooltip" title="Edit">
                        <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" >
                           <span class="glyphicon glyphicon-pencil">
                           </span>
                        </button>
                     </p>
                  </td>
                  <td>
                      <p data-placement="top" data-toggle="tooltip" title="Delete">
                         <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" >
                            <span class="glyphicon glyphicon-trash">
                            </span>
                         </button>
                      </p>
                 </td>
      	       </tr>
               {{/each}}
	 </tbody>
     </table>
</div>

<div style="margin-top: 30px">
    <a class="btn btn-primary btn-md btn-block" href="/jsondatabase/v1/create">Create</a>
    <a class="btn btn-primary btn-md btn-block" href="/jsondatabase/v1/logout">Logout</a>
</div>
